{
  "source": "./src",
  "destination": "./dist",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {
          "enable": true
        },
        "test": {
          "source": "./test/",
          "interfaces": [
            "describe",
            "it",
            "context",
            "suite",
            "test"
          ],
          "includes": [
            "(test|Test)\\.js$"
          ],
          "excludes": [
            "\\.config\\.js$"
          ]
        }
      }
    }
  ]
}