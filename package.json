  },
  "main": "src/crypto-api.js",
  "directories": {
    "test": "test",
    "lib": "src",
    "example": "example"
  },
  "scripts": {
    "test": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly --dir coverage -- --require babel-core/register --reporter spec --recursive test/test.js",
    "test-dev": "istanbul cover node_modules/mocha/bin/_mocha --dir coverage -- --require babel-core/register  --reporter spec --recursive test/test.js",
    "build": "webpack --progress --hide-modules && esdoc",
    "coveralls": "coveralls < coverage/lcov.info",
    "codacy": "codacy-coverage < coverage/lcov.info",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.3",
    "codeclimate-test-reporter": "^0.4.1",
    "coveralls": "^2.13.3",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "html-webpack-externals-plugin": "^3.6.0",
    "html-webpack-plugin": "^2.30.1",
    "istanbul": "^1.1.0-alpha.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "mocha": "^4.0.1",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "unminified-webpack-plugin": "^1.4.1",
    "webpack": "^3.6.0"
  },
